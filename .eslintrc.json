{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "^17.0.2"
        }
    },
    "plugins": [
      "@babel",
      "react",
      "prettier" 
    ],
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "warn"
    }
}
